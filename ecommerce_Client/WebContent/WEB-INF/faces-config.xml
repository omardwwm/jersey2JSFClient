<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"  
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    					http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2"> 
 
	<lifecycle>
		<phase-listener>fr.doranco.tpjsf2.listeners.EcouteurPhase</phase-listener>
	</lifecycle>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>detailArticle</from-outcome>
			<to-view-id>/detailProduct.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>deleteArticle</from-outcome>
			<to-view-id>/articles.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>detailUtilisateur</from-outcome>
			<to-view-id>/userDetails.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>deleteUtilisateur</from-outcome>
			<to-view-id>/utilisateurs.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config> 
